<!DOCTYPE html>
<html>

  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <%= link_to "Bookers", root_path %>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-cobtrols="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navgation">
              <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse show" id="navbarNavDropdown"style>
              <ul class="navbar-nav ml-auto">
                <li>
                  <%= link_to "Home", root_path do %>
                  <i class="fas fa-home"></i>
                  <% end %>
                </li>
                <li>
                  <%= link_to "About", about_path do %>
                  <i class="fas fa-link"></i>
                  <% end %>
                </li>
                <li>
                  <%= link_to "Sign up", new_user_registration_path do %>
                  <i class="fas fa-user-plus"></i>
                  <% end %>
                </li>
                <li>
                  <%= link_to "Log in",  new_user_session_path do %>
                  <i class="fas fa-sign-in-alt"></i>
                  <% end %>
                </li>
              </ul>
            </div>
        </div>
      </nav>
    <% if user_signed_in? %>
      <li>
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
      </li>
    <% else %>
      <li>
        <%= link_to "新規登録", new_user_registration_path %>
      </li>
      <li>
        <%= link_to "ログイン", new_user_session_path %>
      </li>
    <% end %>
    </header>
    <main>
       <%= yield %>
    </main>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto"><p>CopyRight Infratop.inc</p></div>
        </div>
      </div>
    </footer>
  </body>
</html>
