<h1>New book</h1>
  <%= form_with model: @books do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
  
 
 <h2>Book deteil</h2>
<p><%= @book.title %></p>

<h2>本文</h2>
<p><%= @book.body %></p>

<%= link_to "Edit", books_path(@book.id) %>
<%= link_to "Destroy",book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>