<h1>User info</h1>

<%= image_tag @user.get_image(100,100) %>

<%= current_user.name %>
<!--<%= @user.name %>-->

<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>

    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
  
  <h1>Books</h1>

  <% @books.each do |book| %>
  <!--viewだけで書くなら@user.books-->

  <p>Title</p>
  <%= book.title %>
  
  <p>Opinion</p>
  <%= book.body %>

  <% end %>
